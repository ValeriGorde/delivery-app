@model Delivery.Web.Models.OrderViewModel
@{
    string title = "View Order " + ViewData["Id"];
    ViewData["Title"] = title;
}

@if (Model is null)
{
    <div>Заказ не найден</div>
}
else
{
    <div>
        <dl class="dl-horizontal">
            <dt>Идентификатор</dt>
            <dd>@Model.Id</dd>
            <dt>Город отправителя</dt>
            <dd>@Model.SendersCity</dd>
            <dt>Адрес отправителя</dt>
            <dd>@Model.SendersAddress</dd>
            <dt>Город получателя</dt>
            <dd>@Model.RecipientCity</dd>
            <dt>Адрес получателя</dt>
            <dd>@Model.RecipientAddress</dd>
            <dt>Вес груза</dt>
            <dd>@Model.CargoWeight</dd>
            <dt>Дата забора груза</dt>
            <dd>@Model.DatePickup</dd>
        </dl>
    </div>

    <a asp-controller="Order" asp-action="Index">Вернуться к списку заказов</a>
    <br />
    <br />

    <div class="btn-group">
        <a asp-controller="Order" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Редактировать</a>
        <form asp-controller="Order" asp-action="Delete" method="post" asp-route-id="@Model.Id">
            <button type="submit" class="btn btn-danger ms-3">Удалить</button>
        </form>
    </div>
}


